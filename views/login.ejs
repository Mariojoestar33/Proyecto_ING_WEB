<!DOCTYPE html>
<html lang="es">
    <%- include('head') %>
    <body>
        <!--Navbar start-->
        <header>
            <%- include('navbar') %>
        </header>
        <!--End of Navbar-->
        <!--Creacion de cuenta-->
        <h1 class="titulo">Iniciar sesion</h1>
        <form class="formulario" method="POST" action="/login">
            <div class="form-group">
                <% if (pageTitle == error) { %>
                    <div class="alert alert-danger" style="text-align: center;">
                        Error al iniciar sesion, contraseña o correo incorrecto. <br>
                    </div>
                <% } %>
              <label for="exampleInputEmail1">Correo Electronico</label>
              <input type="email" class="form-control" id="correo" name="correo" aria-describedby="emailHelp" placeholder="tuCorreo@gmail.com">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Password">
            </div>
        </br>
            <button type="submit" class="btn btn-primary">Iniciar sesion</button>
            <p><a class="link-opacity-75" href="/registro">No tienes cuenta? Registrate hoy mismo</a></p>
            <p><a href="/forgotPassword" class="link-opacity-75">Olvidaste la contraseña???</a></p>
        </form>
        <!--End of form-->
        <!--Footer start-->
        <%- include('footer', { currentYear: new Date().getFullYear() }) %>
    </body>
</html>