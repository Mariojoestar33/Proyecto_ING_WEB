<!DOCTYPE html>
<html lang="es">
<%- include('head') %>
<body>
    <header>
        <%- include('navbar') %>
    </header>
    <div class="container">
        <h1 class="titulo">Editar Producto</h1>
        <h1 class="titulo"><%= product.nombre %></h1>
        <form action="/productos/<%= product.id %>/editar" method="POST" class="formulario">

            <!-- Nombre -->
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="<%= product.nombre %>">

            <!-- Descripción -->
            <label for="descripcion">Descripción:</label>
            <textarea id="descripcion" name="descripcion"><%= product.descripcion %></textarea>

            <!-- Stock -->
            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" value="<%= product.stock %>">

            <!-- Precio -->
            <label for="precio">Precio:</label>
            <input type="number" id="precio" name="precio" value="<%= product.precio %>">

            <!-- Marca (modificado similar al tipo de usuario) -->
            <% if (tipo == 'administrador') { %>
                <label for="marca">Marca:</label>
                <select id="marca" name="marca">
                    <option value="Barrilito" <%= product.marca === 'Barrilito' ? 'selected' : '' %>>Barrilito</option>
                    <option value="Bond" <%= product.marca === 'Bond' ? 'selected' : '' %>>Bond</option>
                    <option value="Borax" <%= product.marca === 'Borax' ? 'selected' : '' %>>Borax</option>
                    <option value="Norma" <%= product.marca === 'Norma' ? 'selected' : '' %>>Norma</option>
                    <option value="Paper Mate" <%= product.marca === 'Paper Mate' ? 'selected' : '' %>>Paper Mate</option>
                    <option value="Scribe" <%= product.marca === 'Scribe' ? 'selected' : '' %>>Scribe</option>
                </select>
            <% } else { %>
                <p>Marca: Admin Only Brand (No se puede modificar)</p>
                <input type="hidden" name="marca" value="<%= product.marca %>">
            <% } %>

            <!-- Categoría (añadida similar al tipo de usuario) -->
            <% if (tipo == 'administrador') { %>
                <label for="categoria">Categoría:</label>
                <select id="categoria" name="categoria">
                    <option value="Adhesivos" <%= product.categoria === 'Adhesivos' ? 'selected' : '' %>>Adhesivos</option>
                    <option value="Escritura" <%= product.categoria === 'Escritura' ? 'selected' : '' %>>Escritura</option>
                    <option value="Herramientas" <%= product.categoria === 'Herramientas' ? 'selected' : '' %>>Herramientas</option>
                    <option value="Papel" <%= product.categoria === 'Papel' ? 'selected' : '' %>>Papel</option>
                    <!-- Agrega más opciones según tus necesidades -->
                </select>
            <% } else { %>
                <p>Categoría: Admin Only Category (No se puede modificar)</p>
                <input type="hidden" name="categoria" value="<%= product.categoria %>">
            <% } %>

            <!-- Botón para modificar -->
            <button type="submit" class="btn btn-warning" style="width: 100%;">Modificar</button>
        </form>
    </div>
    <%- include('footer', { currentYear: new Date().getFullYear() }) %>
</body>
</html>
